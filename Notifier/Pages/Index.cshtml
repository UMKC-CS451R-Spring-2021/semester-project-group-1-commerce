@page
@model IndexModel
@{ ViewData["Title"] = "Home page"; }

<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #4FA800;
        }

        .white {
            color: white;
        }

        h1{
            font-family: 'Poppins', sans-serif;
        }

        .fade-in{
            animation: fadeInAnimation ease 4s;
        }

        .appear {
            animation: appear 0s 1.5s forwards;
            visibility: hidden;
        }

        @@keyframes fadeInAnimation {
            0% {
                opacity: 0;
            }
            100% {
                opacity: 1;
            }
        }

         @@keyframes appear {
            to   { visibility: visible; }
        }

        .btn{
            border: solid 1px;
            border-color: black;
            background-color: darkgreen;
            color: white;
            cursor: pointer;
            margin-top: 50px;
        }

        .vcenter {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right:0;
            display: flex;
            justify-content: center; /* add to align horizontal */
            align-items: center; /* add to align vertical */
        }

        .logo{
            padding-left: 145px;
            padding-bottom: 50px;
        }


    </style>
</head>

<div>
    <div class="vcenter">
        <div>
            <div class="logo">
                <img src="https://i.imgur.com/D0D9grU.png" height="100" length="500" />
            </div>
            <div class="text-center">
                <h1 class="display-4 fade-in">Welcome!</h1>
                <h1 class="display-4 appear">Commerce Banking App</h1>
                <a class="nav-link white" asp-area="Identity" asp-page="/Account/Login"><input class="btn" value="Click Me To Login Here" /></a>
            </div>
        </div>
    </div>
</div>
