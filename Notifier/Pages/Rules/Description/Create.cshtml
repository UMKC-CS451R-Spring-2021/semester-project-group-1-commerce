@page
@model Notifier.Pages.Rules.Description.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

    <style>
        a, p {
            font-family: 'Open Sans', sans-serif;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Poppins', sans-serif;
        }

        a {
            color: blue;
        }

            a:hover {
                color: indigo;
                text-decoration: underline;
            }

        body {
            background-image: url("https://i.imgur.com/CXYEAds.png");
        }

        .btnhome {
            text-align: center;
            padding: 10px;
            width: 125px;
            border: solid 1px;
            border-radius: 5px;
            border-color: black;
            background-color: darkgreen;
            color: white;
            margin-top: 5px;
            font-family: 'Poppins', sans-serif;
            font-size: 14px;
        }

        .btnhome:hover {
            color: black;
            background-color:green;
            cursor: pointer;
        }
    </style>
</head>

<h1>Create</h1>

<h4>DescriptionRule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DescriptionRule.OwnerID" class="control-label"></label>
                <input asp-for="DescriptionRule.OwnerID" class="form-control" />
                <span asp-validation-for="DescriptionRule.OwnerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionRule.descriptionNotification" class="control-label"></label>
                <input asp-for="DescriptionRule.descriptionNotification" class="form-control" />
                <span asp-validation-for="DescriptionRule.descriptionNotification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btnhome" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
