@page
@model Notifier.Pages.Balance.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BalanceModel[0].OwnerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BalanceModel[0].BalanceAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BalanceModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BalanceAmount)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BalanceID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.BalanceID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.BalanceID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
